<?xml version="1.0" encoding="UTF-8"?>
<manifest>

<remote name="linaro-android"
	fetch="http://android-git.linaro.org/git/"
	review="android-review.linaro.org" />

 <!-- Based on https://android-git.linaro.org/platform/manifest.git
      linaro-nougat-tv branch -->

 <remove-project name="device/linaro/hikey"/>
 <remove-project name="device/linaro/hikey-kernel"/>

 <project path="device/linaro/hikey" name="device/linaro/hikey" revision="master" remote="aosp" groups="device,hikey" />
 <project path="device/linaro/hikey-kernel" name="device/linaro/hikey-kernel" revision="master" remote="aosp" groups="device,hikey" />

 <!-- Linaro Kernels -->
 <project path="kernel/linaro/hisilicon" name="kernel/hikey-linaro" revision="android-hikey-linaro-4.9" remote="aosp" groups="device,hikey" />

 <!-- Patches -->
 <project path="android-patchsets" name="android-patchsets" revision="master" remote="linaro-android" groups="device,hikey" />
 <project path="device/linaro/build" name="device/linaro/common" remote="linaro-android" revision="linaro-nougat"/>

 <project path="device/linaro/bootloader/arm-trusted-firmware" name="device/linaro/bootloader/arm-trusted-firmware" revision="master" remote="aosp" groups="device,hikey" />
 <project path="device/linaro/bootloader/edk2" name="device/linaro/bootloader/edk2" revision="master" remote="aosp" groups="device,hikey" />
 <project path="device/linaro/bootloader/OpenPlatformPkg" name="device/linaro/bootloader/OpenPlatformPkg" revision="master" remote="aosp" groups="device,hikey" />

</manifest>
